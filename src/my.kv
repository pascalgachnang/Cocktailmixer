#:import Factory kivy.factory.Factory

#Windows

WindowManager:
    PositioningWindow:
    MainWindow1:
    MainWindow2:
    MainWindow3:
    DrinkInProgress:


<PositioningWindow>:
    name: "positioning"

    
    GridLayout:
        cols: 1
        padding: 20

        

        Label:
            id: positioning_label
            text: "Start Positioning"
            size_hint_y: 0.8

        Button:
            text: "Start"
            size_hint: 0.6, 0.4
            pos_hint: {'center_x': 0.5}
            background_color: 0, 0.7, 0.7, 1  # Hintergrundfarbe des Buttons
            on_release: 
                app.calling_reference_run()
                app.root.current = "page one" 

#Popups Positioning

<P_Positioning@Popup>: #Popup Positioning
    auto_dismiss: False
    title: "positioning..."
    Label:
        text: "positioning..."
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

<P_PositioningComplete@Popup>: #Popup Positioning Complete
    auto_dismiss: False
    title: "Positioning complete"
    Button:
        text: "start mixing"
        size_hint: 0.8, 0.2
        pos_hint:  {"x":0.1, "y":0.1}
        on_release:
            root.dismiss()
            app.root.current = "page one" 
            
      
        
