#Windows

WindowManager:
    PasswordWindow:
    PositioningWindow:
        Widgets:
    MainWindow1:
    MainWindow2:

<PasswordWindow>:
    name: "password"

    GridLayout:
        cols: 1

        GridLayout:
            cols: 2

            Label:
                text: "Password: "

            TextInput:
                id: passw
                multiline: False

        Button:
            text: "Submit"
            on_release:
                app.root.current = "positioning" if passw.text == "Motorenl√§rm22$" else "password"   


<PositioningWindow>:
    name: "positioning"

    Button:
        text: "start positioning"
        on_release: 
            root.btn_positioning_complete() 

#Popups Positioning

<P_Positioning>: #Popup Positioning
    Label:
        text: "positioning..."
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

<P_PositioningComplete>: #Popup Positioning Complete
    Label:
        text: "positioning complete"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    Button:
        text: "start mixing"
        size_hint: 0.8, 0.2
        pos_hint:  {"x":0.1, "y":0.1}
        on_release:
            app.root.current = "page one" 
    
        

<MainWindow1>:
    name: "page one"

    GridLayout:
        cols: 1

        GridLayout:
            cols: 2

            Button:
                text: "Mojito"

            Button:
                text: "Tequilla"

        Button:
            text: "page 2"
            on_release: 
                app.root.current = "page two"

<MainWindow2>:
    name: "page two"
    
    GridLayout:
        cols: 1

        GridLayout:
            cols: 2

            Button:
                text: "Bacardi"

            Button: 
                text: "Long Island IceTea"

        Button:
            text: "page 1"
            on_release: 
                app.root.current = "page one"
                root.manager.transition.direction = "left"


